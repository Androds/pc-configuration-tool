@model IEnumerable<PCConfigurationClient.ViewModels.SummaryViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="title">
    <h1>Order Summary</h1>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="product-name">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
            </tr>
        }
        <tr>
            <td class="product-name">Overall Total:</td>
            <td>@Html.DisplayFor(m => m.LastOrDefault().OverallTotal)</td>
        </tr>
    </tbody>
</table>
